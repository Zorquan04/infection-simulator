<Window x:Class="InfectionSimulator.Animation.ScenarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Infection Simulator" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" >
        <TextBlock Text="Choose a scenerio:" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <Button Name="NormalDayButton" Width="200" Height="40" Margin="0,0,0,10" Click="NormalDayButton_Click" Content="Normal day">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Text="Normal day" FontWeight="Bold"/>
                        <TextBlock Text="- The population is unaware of the disease"/>
                        <TextBlock Text="- 0% immunity"/>
                        <TextBlock Text="- 10% infected at the start"/>
                        <TextBlock Text="- New agents without immunity"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>

        <Button Name="PostEpidemicButton" Width="200" Height="40" Click="PostEpidemicButton_Click" Content="Post-epidemic">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Text="Post-epidemic world" FontWeight="Bold"/>
                        <TextBlock Text="- Population has been exposed to the disease"/>
                        <TextBlock Text="- 70% immune"/>
                        <TextBlock Text="- 3% infected at the start"/>
                        <TextBlock Text="- Immunity persists over time"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>
    </StackPanel>
</Window>