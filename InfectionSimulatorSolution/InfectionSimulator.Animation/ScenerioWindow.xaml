<Window x:Class="InfectionSimulator.Animation.ScenarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybor scenariusza" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" >
        <TextBlock Text="Wybierz scenariusz:" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <Button Content="Normal day" Name="NormalDayButton" Width="200" Height="40" Margin="0,0,0,10" Click="NormalDayButton_Click"/>
        <Button Content="Post-epidemic" Name="PostEpidemicButton" Width="200" Height="40" Click="PostEpidemicButton_Click"/>
    </StackPanel>
</Window>