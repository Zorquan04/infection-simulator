<Window x:Class="InfectionSimulator.Animation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Infection Simulator" Height="550" Width="500">
    <DockPanel>
        <!-- Pasek statystyk -->
        <TextBlock x:Name="StatsTextBlock" DockPanel.Dock="Top" 
                   FontSize="14" Foreground="White" Background="Black"
                   Padding="5"/>
        <!-- Canvas dla animacji -->
    <Canvas x:Name="SimulationCanvas" Background="Black"/>
    </DockPanel>
</Window>
